{
	"manifest_version": 2,
	"name": "Covid19 Tracker & Reminder",
	"version": "1.0.1",
	"description": "Keep track of the covid-19 virus spread and also get reminded to wash your dirty hands.",
	"permissions": ["alarms", "storage", "tabs"],
	"background": {
		"scripts": ["helper.js", "background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": "icons/icon128.png",
		"icons": {
			"48": "icons/icon48.png",
			"64": "icons/icon64.png",
			"128": "icons/icon128.png"
		},
		"default_popup": "popup.html",
		"default_title": "Covid19 Tracker & Reminder"
	}
}
